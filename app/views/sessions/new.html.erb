<div class="container">
   <% flash.each do |type, message|  %>
      <div class="alert alert-<%= type %>"><%= message %></div>
   <% end %>

   <% provide(:username, "Log in") %>
    <h2>Connecte-toi pour avoir accès à un super secret !</h2>

      <div class="row">
   	   <div class="col-md-6 col-md-offset-3">
      	   	<%= form_for(:session, url: login_path) do |f| %>
            <br>
      	   	<%= f.label :email %>
      	   	<%= f.email_field :email, class: 'form-control', placeholder: "Ton email.." %>
            <br>
      	   	<%= f.label :password %>
      	   	<%= f.password_field :password, class: 'form-control', placeholder: "Ton mot de passe.." %>
            <br>
      	   	<%= f.submit "Log in", class: "btn btn-primary" %>
   	   	<% end %>
        <br>

   	 	<p>Nouveau ici? <%= link_to "Enregistre toi", signup_path %></p>
   	   </div>
     </div>
</div>
